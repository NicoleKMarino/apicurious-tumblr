
<div class="col-xs-offset-3 col-sm-offset-0 col-xs-6 thumbnail col-centered transparent">
  <img class="pull-right" src="http://api.tumblr.com/v2/blog/<%=current_user.name%>.tumblr.com/avatar/128">
  <br>
  <br>
  <strong><h2>Hello, <%= current_user.name%>.</h2></strong>
    <br>
    <h3> Intro:</h3> <%= @info[:response][:blog][:title]%>
    <h3> Description:</h3> <%= @info[:response][:blog][:description]%>
    <h3> # of Posts: </h3><%= @info[:response][:blog][:total_posts]%>
    <h3> Is this blog nsfw?</h3> <%= @info[:response][:blog][:is_nsfw]%>
    <br></br>
    <%= link_to "Favorites", likes_path %>
    <%= link_to "Followers", followers_path %>
</div>

<%@posts["posts"].each do |post| %>
<%if post["photos"] != nil %>
<div class="col-md-10 thumbnail col-centered">
<% post["photos"].each do |photo|%>
<img class="post-image" src="<%=photo["alt_sizes"][0]["url"] %>">
<%end %>
<br></br>
<%= post["caption"].html_safe unless post["caption"].nil?%>
<%= post["content"] %>
</div>
<br></br>
<%else %>
<div class="col-md-10 thumbnail col-centered">
<%= post["caption"].html_safe unless post["caption"].nil?%>
<%= post["content"] %>
<%= post["body"].html_safe unless post["body"].nil?%>
<br></br>
</div>
<%end %>
<%end %>
